@model List<FinalProject.Models.CategoryPro>
@{
    ViewData["Title"] = "Category Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <a asp-action="Create" class="btn btn-outline-success">Create Category</a>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Added By</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                            @category.Name
                                        </td>
                                        <td>
                                            @category.AddedBy
                                        </td>
                                        <td>
                                            @category.CreatedAt
                                        </td>
                                        <td>
                                            @category.UpdatedAt
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete-sweep">Delete</i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-outline-warning">
                                                <i>Update</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
