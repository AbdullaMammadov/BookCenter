@model List<FinalProject.Models.Slider>
@{
    ViewData["Title"] = "Slider Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Table</h4>
                    <a asp-action="Create" class="btn btn-outline-success">Create Slider</a>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Added By</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>@slider.Id</td>
                                        <td>
                                            <img src="~/assets/img/@slider.ImgUrl" alt="Slider Image" width="150" />
                                        </td>
                                        <td>@slider.AddedBy</td>
                                        <td>@slider.CreatedAt</td>
                                        <td>@slider.UpdatedAt</td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete-sweep">Delete</i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-outline-warning">
                                                <i>Update</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
