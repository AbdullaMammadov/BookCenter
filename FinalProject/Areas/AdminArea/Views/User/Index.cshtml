@model List<AppUser>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <form asp-action="index">

        <input type="text" name="search" />
   
    </form>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User table</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>LastName</th>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>IsBlocked</th>
                            
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var user in Model)
                                {
                                    <tr>

                                      
                                        <td>@user.LastName</td>
                                    
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@user.IsActive</td>
                                        <td>
                                        @if (user.IsActive)
                                        {
                                           
                                                <a asp-action="ChangeStatus" asp-route-id="@user.Id" class="btn btn-success">
                                                    Active
                                                </a>
                                        }
                                        else
                                        {
                                                <a asp-action="ChangeStatus" asp-route-id="@user.Id" class="btn btn-danger">
                                                    DeActive
                                                </a>
                                              
                                        }
                                        </td>



                                        <td>
                                            @if (User.Identity.Name != user.UserName)
                                            {
                                                <a asp-action="delete" asp-route-id="@user.Id" class="btn btn-outline-danger">
                                                  delete
                                                </a>
                                            }


                                            <a asp-action="update" asp-route-id="@user.Id" class="btn btn-outline-warning">
                                                update
                                            </a>

                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
   


</div>
