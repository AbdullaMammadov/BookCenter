@model FinalProject.ViewModel.Admin.Genre.UpdateGenreVM
@{
    ViewData["Title"] = "Update Genre";
}

<h2>Update Genre</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddedBy"></label>
        <input asp-for="AddedBy" class="form-control" />
        <span asp-validation-for="AddedBy" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
