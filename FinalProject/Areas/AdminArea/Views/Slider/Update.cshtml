@model FinalProject.ViewModel.Admin.Slider.UpdateSliderVM
@{
    ViewData["Title"] = "Update Slider";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Slider</h4>
                    <hr />

                    <form asp-action="Update" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Photo" class="control-label">Image</label>
                            <input asp-for="Photo" type="file" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="AddedBy" class="control-label">Added By</label>
                            <input asp-for="AddedBy" class="form-control" />
                            <span asp-validation-for="AddedBy" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Update Slider</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
