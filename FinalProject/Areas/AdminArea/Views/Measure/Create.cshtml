@model FinalProject.ViewModel.Admin.Activity.CreateActivityVM

@{
    ViewData["Title"] = "Create Activity";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Activity</h4>

                    <form method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Desc2"></label>
                            <input asp-for="Desc2" class="form-control" placeholder="Desc2">
                            <span asp-validation-for="Desc2" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Desc3"></label>
                            <input asp-for="Desc3" class="form-control" placeholder="Desc3">
                            <span asp-validation-for="Desc3" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AddedBy"></label>
                            <input asp-for="AddedBy" class="form-control" placeholder="AddedBy">
                            <span asp-validation-for="AddedBy" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Photo"></label>
                            <input asp-for="Photo" type="file" class="form-control" placeholder="Image">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="IsTedbir">Choose Activity</label>

                            <div>
                                <label>
                                    <input asp-for="IsTedbir" class="form-control" type="radio" value="true"> Tedbir
                                </label>
                                <label>
                                    <input asp-for="IsTedbir" class="form-control" type="radio" value="false"> Lahiye
                                </label>
                            </div>

                            <span asp-validation-for="IsTedbir" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>